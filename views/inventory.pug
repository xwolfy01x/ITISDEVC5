extends ./layouts/layout.pug
block css
    link(rel="stylesheet", type="text/css", href="/css/inventory.css")
block scripts
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    script(src="/scripts/inventory.js")
block maincontainer
    #outerContainer
        form#restockForm(action="", name=restockForm, method="post")
            img#productImage(src="/images/Doritos.png" )
            select#productSelect(name="productSelect" size = "1")
                option(value="Doritos") Doritos
                option(value="Apple") Apple
                option(value="Shovel") Shovel
            .quantityflex
                button.qtybtn#minus(type="button") -
                input#productQuantity(type="number", name="productQuantity", placeholder="number", min="1", required)
                button.qtybtn#plus(type="button") +
            .priceflex#priceeach  
                span.prod Price for each: &nbsp
                span.prod#productPrice Php 30.85
            .priceflex#totalprice
                span.prod Total Price: &nbsp
                span.prod#totalPrice price * quantity
            button#order(type="submit") Order Stock
        #restockList
            div(style="grid-column: 1/3; padding: 20px; background-color: #343d52; color: white; font-weight: bolder; font-size: 250%;")
                span Last 5 Restock
            .tr2
                span 5 x Item1
                span Php 0.00
            .tr1
                span 2 x Item2
                span Php 0.00
            .tr2
                span 10 x Item3
                span Php 0.00
            .tr1
                span 999 x Item4
                span Php 440.00
            .tr2
                span 20 x Item5
                span Php 33323.00